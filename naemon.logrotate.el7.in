@logdir@/naemon.log {
    su @naemon_user@ @naemon_group@
    daily
    rotate 3650
    nocompress
    olddir archives
    dateext
    dateformat -%Y%m%d
    missingok
    notifempty
    postrotate
      localstatedir=@localstatedir@
      [ -f @lockfile@ ] && kill -s USR1 `cat @lockfile@`
    endscript
    create 0664 @naemon_user@ @naemon_group@
}
